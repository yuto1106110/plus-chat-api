datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ユーザー情報
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   @default("USER")
  isBanned  Boolean  @default(false)
  isMuted   Boolean  @default(false) // ← ログで「Unknown」と言われていたので必須です
}

// メッセージ情報
model Message {
  id        Int      @id @default(autoincrement())
  user      String
  text      String
  userId    String   @default("")
  role      String   @default("USER")
  createdAt DateTime @default(now())
  // 【重要】ここには isBanned や isMuted は入れません（不要なため）
}
