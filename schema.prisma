datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ユーザー情報のテーブル
model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Message {
  id        Int      @id @default(autoincrement())
  user      String
  text      String
  createdAt DateTime @default(now()) // 送信時間を記録
}
